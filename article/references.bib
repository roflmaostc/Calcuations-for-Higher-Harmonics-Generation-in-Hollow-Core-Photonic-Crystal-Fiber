journal = {Opt. Lett.},
keywords = {Nonlinear optics, fibers; Harmonic generation and mixing ; Nonlinear optics, fibers; Ultrafast nonlinear optics; Nonlinear wave mixing ; Photonic crystal fibers ; Dispersion; Hollow core fibers; Phase matching; Stimulated Raman scattering; Stimulated scattering; Ti:sapphire lasers},
